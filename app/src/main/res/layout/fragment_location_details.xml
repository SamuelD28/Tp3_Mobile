<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/location_details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/location_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/location_details_name"
            android:inputType="textPersonName"
            android:text="@string/location_details_name" />

        <EditText
            android:id="@+id/location_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/location_details_description"
            android:inputType="textMultiLine"
            android:text="@string/location_details_description" />

        <Spinner
            android:id="@+id/location_details_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/location_details_category" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>